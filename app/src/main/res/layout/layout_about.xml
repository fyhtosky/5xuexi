<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:id="@+id/about_titleBarView"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/colorGreen">
      <ImageView
          android:id="@+id/view_titlebar_left"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="8dp"
          android:src="@mipmap/icon_back" />
      <TextView
          android:id="@+id/view_titlebar_center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="关于软件"
          android:textColor="@color/colorWrite"
          android:textSize="18sp" />
      <ImageView
          android:id="@+id/iv_share"
          android:layout_alignParentRight="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginRight="10dp"
          android:src="@mipmap/share"/>
  </RelativeLayout>
    <LinearLayout
        android:id="@+id/about_container"
        android:layout_below="@id/about_titleBarView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/about_icon"
            android:src="@mipmap/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/about_hint"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@id/about_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/about_text"
        android:layout_below="@id/about_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.4"
        android:padding="8dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:alpha="0.8"
        android:textSize="14sp"
        android:gravity="center"
        android:text="Copyright © 2014-2016 5xuexi.com All Rights Reserved"/>
</RelativeLayout>