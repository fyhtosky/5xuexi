<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--缺省值显示-->
    <LinearLayout
        android:id="@+id/tab_defaultContainer"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/kec_defaults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_couse"/>
        <TextView
            android:gravity="center"
            android:textSize="14sp"
            android:padding="10dp"
            android:text="暂时没有课程"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--Expend列表显示-->
    <com.sj.yinjiaoyun.xuexi.widget.NewExpandableListView
        android:id="@+id/tab_expandableListView"
        android:layout_width="match_parent"
        android:background="@color/colorWrite"
        android:layout_height="match_parent"/>

    <!--listView列表显示-->
    <com.sj.yinjiaoyun.xuexi.widget.NewListView
        android:id="@+id/tab_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWrite"/>

</RelativeLayout>