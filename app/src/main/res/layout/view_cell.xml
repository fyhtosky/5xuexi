<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/view_cell_text"
        android:lineSpacingMultiplier="1.2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/view_cell_top"
        android:layout_alignTop="@id/view_cell_text"
        android:layout_alignLeft="@id/view_cell_text"
        android:layout_alignRight="@id/view_cell_text"
        android:background="@color/colorHomeitem"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <ImageView
        android:id="@+id/view_cell_bottom"
        android:layout_alignBottom="@id/view_cell_text"
        android:layout_alignLeft="@id/view_cell_text"
        android:layout_alignRight="@id/view_cell_text"
        android:background="@color/colorHomeitem"
        android:layout_width="wrap_content"
        android:layout_height="1dp" />
    <ImageView
        android:id="@+id/view_cell_left"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/view_cell_text"
        android:layout_alignBottom="@id/view_cell_text"
        android:background="@color/colorHomeitem"
        android:layout_width="1dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/view_cell_right"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/view_cell_text"
        android:layout_alignBottom="@id/view_cell_text"
        android:background="@color/colorHomeitem"
        android:layout_width="1dp"
        android:layout_height="wrap_content" />
</RelativeLayout>