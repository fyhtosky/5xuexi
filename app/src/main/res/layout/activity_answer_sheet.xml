<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.sj.yinjiaoyun.xuexi.activity.AnswerSheetActivity">
    <com.sj.yinjiaoyun.xuexi.view.TitleBarView
        android:id="@+id/title"
        app:attr_titlebar_title="答题卡"
        app:attr_titlebar_back="@mipmap/icon_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.sj.yinjiaoyun.xuexi.view.MyScrollView
        android:layout_below="@+id/title"
        android:layout_above="@+id/submit_exam"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <!--单选题-->
            <RelativeLayout
                android:id="@+id/rl_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_single"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一、单选题(10题，每题1分)"
                    android:textSize="16sp"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/tv_single"
                    android:id="@+id/rv_single"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <!--多选题-->
            <RelativeLayout
                android:id="@+id/rl_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="二、多选题(5题，每题2分)"
                    android:textSize="16sp"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/tv_more"
                    android:id="@+id/rv_more"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <!--判断题-->
            <RelativeLayout
                android:id="@+id/rl_give"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_give"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="三、判断题(5题，每题2分)"
                    android:textSize="16sp"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/tv_give"
                    android:id="@+id/rv_give"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <!--完型填空-->
            <RelativeLayout
                android:id="@+id/rl_cloze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_cloze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="四、完型填空(5题，每题2分)"
                    android:textSize="16sp"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/tv_cloze"
                    android:id="@+id/rv_cloze"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <!--阅读理解-->
            <RelativeLayout
                android:id="@+id/rl_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="五、阅读理解(5题，每题2分)"
                    android:textSize="16sp"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/tv_part"
                    android:id="@+id/rv_part"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <!--主观题-->
            <RelativeLayout
                android:id="@+id/rl_subjective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_subjective"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="六、问答题(5题，每题2分)"
                    android:textSize="16sp"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_below="@+id/tv_subjective"
                    android:id="@+id/rv_subjective"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </com.sj.yinjiaoyun.xuexi.view.MyScrollView>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/submit_exam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:gravity="center"
        android:textSize="18sp"
        android:text="提交试卷"
        android:textColor="@color/colorWrite"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorGreen"/>
</RelativeLayout>
