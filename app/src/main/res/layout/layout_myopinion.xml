<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorGrayish"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGreen"
        android:padding="2dp">
        <ImageView
            android:id="@+id/opinion_back"
            android:onClick="onclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="意见反馈"
            android:textColor="@color/colorWrite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/opinion_tijiao"
            android:onClick="onclick"
            android:textColor="@color/textcolor_writeorgreen_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="提交"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/opinion_title"
        android:hint="请填写反馈标题（不超过30个字）"
        android:gravity="left"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:maxLength="30"
        android:background="@color/colorWrite"
        android:lines="1"
        android:textSize="16sp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/opinion_text"
        android:hint="请填写具体内容帮助我们了解您的意见和建议（不超过300个字）"
        android:gravity="left"
        android:padding="5dp"
        android:maxLength="300"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lineSpacingMultiplier="1.2"
        android:background="@color/colorWrite"
        android:lines="8"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/opinion_Contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWrite"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:paddingLeft="5dp"
        android:hint="QQ/Email/手机"/>

</LinearLayout>