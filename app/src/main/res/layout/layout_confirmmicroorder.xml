<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:title="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.sj.yinjiaoyun.xuexi.view.TitleBarView
        android:id="@+id/confirm_micro_titleBarView"
        title:attr_titlebar_title="确认订单"
        title:attr_titlebar_back="@mipmap/icon_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--课程图片-->
    <LinearLayout
        android:id="@+id/confirm_micro_container"
        android:layout_below="@id/confirm_micro_titleBarView"
        android:layout_width="140dp"
        android:layout_height="103dp"
        android:background="@color/colorWrite"
        android:paddingLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:id="@+id/confirm_micro_image"/>
    </LinearLayout>

    <!--课程名称-->
    <RelativeLayout
        android:layout_alignBottom="@id/confirm_micro_container"
        android:layout_toRightOf="@id/confirm_micro_container"
        android:layout_alignTop="@id/confirm_micro_container"
        android:background="@color/colorWrite"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/confirm_micro_courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:padding="5dp"
            android:textSize="18sp"
            android:hint="课程名称"/>
        <!--学校 开课方式 价格 人数-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/confirm_micro_courseName"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">
            <TextView
                android:id="@+id/confirm_micro_college"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="学院"
                android:textSize="14sp"
                android:padding="2dp"
                android:alpha="0.8"/>
            <TextView
                android:id="@+id/confirm_micro_tutionWay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="开课方式"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:drawablePadding="3dp"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:alpha="0.8" />
            <TextView
                android:id="@+id/confirm_micro_price"
                android:textColor="@color/colorRed"
                android:hint="价格"
                android:textSize="14sp"
                android:layout_below="@id/confirm_micro_college"
                android:layout_width="wrap_content"
                android:padding="2dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/confirm_micro_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/confirm_micro_college"
                android:textSize="14sp"
                android:drawablePadding="3dp"
                android:drawableLeft="@mipmap/openclass_icon"
                android:layout_marginBottom="5dp"
                android:padding="2dp"
                android:alpha="0.8" />
        </RelativeLayout>
    </RelativeLayout>

    <!--商品金额-->
    <RelativeLayout
        android:id="@+id/confirm_micro_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWrite"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_below="@id/confirm_micro_container">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="开课时间"/>
            <TextView
                android:id="@+id/confirm_micro_goodsAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/confirm_micro_realPay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:hint="实付金额"
            android:padding="10dp"/>
        <Button
            android:id="@+id/confirm_micro_tijiao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWrite"
            android:text="提交订单"/>
    </LinearLayout>

</RelativeLayout>