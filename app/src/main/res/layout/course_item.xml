<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWrite"
    android:id="@+id/item">

        <!--课程图片-->
        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="148dp"
            android:layout_height="93dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_course_complete"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/expend_state"/>
        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_toRightOf="@+id/ll_image"
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_alignBaseline="@+id/ll_image">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="课程名称"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_above="@+id/rl_study"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_courseCredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:text="学分"/>
                <TextView
                    android:id="@+id/tv_totalScore"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:padding="2dp"
                    android:text="总成绩：成教"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_study"
                android:layout_marginTop="5dp"

                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent">
                <ProgressBar
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/report_majorPercent"
                    android:id="@+id/report_micro_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:max="100"
                    android:layout_centerVertical="true"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/progressbar_color" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/report_majorPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"
                    android:text="0%"/>
            </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>


