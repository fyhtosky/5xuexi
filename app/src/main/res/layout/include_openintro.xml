<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/openintro_container"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--课程名称-->
    <TextView
        android:id="@+id/openintro_couseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorHomeitem"
        android:padding="10dp"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="11"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/openintro_collegeName"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:lines="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/openintro_attention"
            android:drawablePadding="3dp"
            android:drawableLeft="@mipmap/openclass_icon"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:lines="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/openintro_goodrate"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:lines="1"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/openintro_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorRed"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <!--内容详情-->
    <TextView
        android:id="@+id/openintro_jianjie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:layout_marginTop="5dp"
        android:padding="10dp" />
</LinearLayout>